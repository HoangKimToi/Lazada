<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/backgroundTooBar"
        android:id="@+id/toolBar_chitiet"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_above="@+id/bottom"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_collapseMode="parallax">
                    <TextView
                        android:id="@+id/tv_tensanpham"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flag"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_giatien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100000 VNĐ"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorRed"/>
                        <TextView
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tv_giamgia_chitietsp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100000 VNĐ"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorGray"/>
                    </LinearLayout>
                    <RatingBar
                        android:id="@+id/rb_danggia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"
                        android:numStars="5"
                        android:theme="@style/ColorRatingBar"/>
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager_slideShow"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/lv_dot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_share"
                                android:padding="10dp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_favorite_black_24dp"
                                android:padding="10dp"/>
                        </LinearLayout>
                    </FrameLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Các sản phẩm khác"
                        android:gravity="center"
                        android:textColor="@color/colorFacebook"
                        android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:background="#D5DAD9"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bán và đóng gói bởi" />
                    <TextView
                        android:id="@+id/tv_tennhanvien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lazada"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorFacebook"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trả hàng miễn phí"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đảm bảo chính hãng 100%"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bản vệ người tiêu dùng"
                            android:layout_marginHorizontal="5dp"
                            android:drawableLeft="@drawable/status_shield"
                            android:background="@color/colorWhite"/>
                        <Button
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Đảm bảo an toàn 100%"
                            android:drawableLeft="@drawable/icon_shield"
                            android:background="@color/colorWhite"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết sản phẩm"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_thongtin_chitiet"
                        android:textSize="15sp"
                        android:textColor="#080908"/>
                    <LinearLayout
                        android:id="@+id/lnThongSoKyThuat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/im_xemthemchitiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_keyboard_arrow_down"
                        android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Đánh giá và nhận xét."/>
                        <TextView
                            android:gravity="center"
                            android:id="@+id/tv_vietdanhgia"
                            android:textColor="@color/colorFacebook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Viết đánh giá."/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/lv_danhgia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xem tất cả nhận xét."
                        android:gravity="center"
                        android:textColor="@color/colorFacebook"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btn_muangay_chitietsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mua ngay"
                android:padding="10dp"
                android:background="@color/bgLogo"/>
            <ImageButton
                android:id="@+id/imBtn_add_to_cart"
                android:src="@drawable/ic_add_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="10dp"
                android:background="@color/colorFacebook"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>