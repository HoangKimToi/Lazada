<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét về sản phẩm"
        android:textColor="@color/bgLogo"
        android:textSize="18sp"/>
    <RatingBar
        android:id="@+id/rb_Themdanhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:scaleX=".5"
        android:scaleY=".5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_editTieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_tieude"
            android:maxLength="50"
            android:lines="1"
            android:hint="Tiêu đề :"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/input_editNoiDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_noidung"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:hint="Nội dung :"/>

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_HuyDanhGia"
            android:background="@color/bgLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_weight="1"/>
        <Button
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_themDanhGia"
            android:background="@color/bgLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đồng ý"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>